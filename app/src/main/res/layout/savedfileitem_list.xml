<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/md_theme_surfaceVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- File Thumbnail with primary color tint -->
        <ImageView
            android:id="@+id/file_thumbnail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:tint="@color/md_theme_primary"
            android:src="@drawable/file_placeholder" />

        <!-- File Info Layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- File Name (bold and black) -->
            <TextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <!-- File Details -->
            <TextView
                android:id="@+id/file_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 Mar, 500 KB, JPG image"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurfaceVariant"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/more_options_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_more_vert"
            app:iconTint="@color/md_theme_primary"
            android:contentDescription="More options"
            style="@style/Widget.Material3.Button.IconButton" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>